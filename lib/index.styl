.button-container
  margin 1.8em auto
  width 30%
  max-width 20em
  min-width 14em
  text-align center

  .row
    display inline-flex
    width 100%
    > button
      width inherit
      &:not(:first-child)
        margin-left 0.6em

  > button
    width 100%
    display block
    margin 0.6em 0

  i.icon-loading
    font-size 1.1rem
    vertical-align middle
    margin 0 4px

.setting-container
  display flex
  flex-direction row
  align-items baseline
  justify-content center
  max-width 400px
  margin 2rem auto
  transition 0.3s ease
  padding 0 1em

  span
    font-weight bold
    display inline-block
    width 5.6em
    font-size 1.1rem
